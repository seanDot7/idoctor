<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sjtu.idoctor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sjtu.idoctor.view.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ConfirmActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.TempratureMeasureActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.fragment.BloodPressureFragment"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.MyBluetooth"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.DoctorActivity"
            android:label="@string/title_activity_doctor" >
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
